<%= File.read('boilerplate_top.html') %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1><%=d[:field_name]%>: <%=d[:scenario_name]%></h1>
			<h2><%=d[:scenario_budget]['name']%> Revenue and Expenses</h2>

			<table class="table table-bordered">
				<tbody>
					<tr class="success">
						<td><h3>Revenue</h3></td>
						<td class="col-xs-1"></td>
						<td class="col-xs-1"></td>
					</tr>
					<tr class="success">
						<td>Commodity Price</td>
            <td class="text-right"><%= curr(d[:commodity_price]) %></td>
						<td>$/bu</td>
					</tr>
					<tr class="success">
						<td>Other Revenue</td>
            <td class="text-right"><%= curr(d[:zone_other_revenue_per_acre]) %></td>
						<td>$/acre</td>
					</tr>
					<tr class="success">
						<td class="text-right"><strong>Total Revenue</strong></td>
            <td class="text-right"><%= curr(d[:zone_revenue_per_acre]) %></td>
						<td>$/acre</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered">
				<tbody>
					<tr>
						<td><h3>Expenses</h3></td>
						<td class="col-xs-1"></td>
						<td class="col-xs-1"></td>
					</tr>

          <% d[:mz_budget_exp].each do |item| %>
            <tr>
              <td><%= item['item_name'] %></td>
              <td class="text-right"><%= curr(item['amount']) %></td>
              <td>$/acre</td>
            </tr>
              <% if item['sub_budget_items'].size > 0 %>
                <% item['sub_budget_items'].each do |sbi| %>
                  <tr>
                    <td class="small">&nbsp;&nbsp;&nbsp;&nbsp;- <%= sbi['item_name'] %></td>
                    <td class="text-right"><%= curr(sbi['amount']) %></td>
                    <td>$/acre</td>
                  </tr>
                <% end %>
              <% end %>
          <% end %>

					<tr>
						<td class="text-right"><strong>Total Expenses</strong></td>
						<td class="text-right"><%= curr(d[:mz_expenses_per_acre]) %></td>
						<td>$/acre</td>
					</tr>
				</tbody>
			</table>
			<table class="table table-bordered">
				<tbody>
					<tr class="success">
						<td class="text-right"><strong>Total Profit</strong></td>
						<td class="col-xs-1 text-right"><strong><%= curr(d[:mz_profit_per_acre]) %></strong></td>
						<td class="col-xs-1"><strong>$/acre</strong></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>

<%= File.read('boilerplate_bottom.html') %>
