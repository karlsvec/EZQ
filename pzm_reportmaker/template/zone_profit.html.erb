	<div class="row">
		<div class="col-xs-6">
            <img src="./<%= d[:mz_histogram] %>" class="hist-chart" alt="Chart">
		</div>
		<div class="col-xs-6">
			<img src="./<%= d[:mz_pie_chart] %>" class="hist-chart" alt="Chart">
		</div>
	</div>
-->
</div>

