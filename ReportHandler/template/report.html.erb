<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="/favicon.ico">

    <meta name="author" content="">
    <meta name="description" content="">
    <meta name="keywords" content="">
    
    <title></title>

    <link href="./css/libs/bootstrap.min.css" rel="stylesheet">
    <script src="./js/libs/modernizr-2.7.1.min.js"></script>

    <link href="./css/main.css" rel="stylesheet">
</head>
<body>
<div class="container">

<div class="row">
	<div class="col-xs-12">
		<table class="table table-borderless">
			<tbody>
			<tr>
				<th>Field ID</th>
        <td><%= data[:field_id] %></td>
			</tr>
			<tr>
				<th>Crop Rotation</th>
				<td><%= data[:crop_rotation] %></td>
			</tr>
			<tr>
				<th>Dominant Critical Soil</th>
				<td ><%= data[:dominant_critical_soil] %></td>
			</tr>
			<tbody>
		</table>
		<table class="table">
			<thead>
			<tr>
				<th>Crop Year</th>
        <% data[:crop_year].each do |year| %>
				<th><%= year %></th>
				<% end %>
			</tr>
			</thead>
			<tbody>
			<tr>
				<th>Crop</th>
        <% data[:crop].each do |cr| %>
				<td><%= cr %></td>
        <% end %>
			</tr>
			<tr>
				<th>Grain Yield</th>
        <% data[:grain_yield].each do |gy| %>
				<td><%= "%.2f" % gy %></td>
				<% end %>
			</tr>
			</tbody>
		</table>
	</div>
</div>


<div class="row">
	<div class="col-xs-12">
		<table class="table table-small-text table-bordered table-striped">
			<thead>
        <tr>
          <th colspan="4">Management Operations</th>
        </tr>
				<tr>
					<th>Date</th>
					<th>Operation</th>
					<th>Crop</th>
					<th>% Residue Cover</th>
				</tr>
			</thead>
			<tbody>

        <% data[:management_operations].each do |op| %>
				<tr>
					<td><%=op['date'] %></td>
					<td><%=op['operation'] %></td>
					<td><%=op['crop'] %></td>
					<td><%= "%.2f" %  op['residue_cover'] %></td>
				</tr>
        <% end %>

			</tbody>
		</table>
	</div>
</div>




<div class="vertical-padding">
	<div class="col-xs-12">
	</div>
</div>


<div class="dont-break">
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-small-text table-striped table-bordered">
        <thead>
          <tr>
            <th>Soil Map Unit Symbol</th>
            <th>Soil Erosion</th>
            <th>Soil Condition Index</th>
            <th>Organic Matter Sub-Factor</th>
            <th>Field Operation Sub-Factor</th>
            <th>Erosion Sub-Factor</th>
          </tr>
        </thead>
        <tbody>

          <% data[:soil_details].each do |sd| %>
          <tr <%= String.new("class=\"rb\"") if sd['domcrit'] %> >
            <td><%=sd['map_unit_symbol']%></td>
            <td><%= "%.2f" % sd['erosion']%></td>
            <td><%= "%.2f" % sd['conditioning_index']%></td>
            <td><%= "%.2f" % sd['organic_matter_sf']%></td>
            <td><%= "%.2f" % sd['field_operation_sf']%></td>
            <td><%= "%.2f" % sd['erosion_sf']%></td>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <table class="table">
        <tbody>
          <tr>
            <th>Soils Map</th>
            <td><img src="./images/SoilMap.png" class="soil-map"></td>
            <td>
              <table class="table table-small-text table-striped">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Ac</th>
                    <th>Pct</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody>
                  <% data[:soil_map].each do |sm| %>
                  <tr <%= String.new("class=\"rb\"") if sm['domcrit'] %> >
                    <td><%= sm['id'] %></td>
                    <td><%= "%.2f" % sm['ac'] %></td>
                    <td><%= "%.2f" % sm['pct'] %></td>
                    <td><%= sm['description'] %></td>
                  </tr>
                  <% end %>

                </tbody>
              </table>
            </td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>


<div class="row dont-break">
	<div class="col-xs-12">
		<table class="table table-striped">
      <thead>
        <tr>
          <th colspan="2">Results</th>
        </tr>
      </thead>
			<tbody>
			<tr>
				<th>Dominant Critical Soil</th>
				<td ><%= data[:dominant_critical_soil] %></td>
			</tr>
			<tr>
				<th>Diesel Use</th>
				<td><%= "%.2f" % data[:diesel_use] %> (gal/acre/year) *Calculated using NRCS assumptions</td>
			</tr>
			<tr>
				<th>Water Erosion</th>
				<td><%= "%.2f" % data[:water_erosion] %> (tons/acre/year)</td>
			</tr>
			<tr>
				<th>Wind Erosion</th>
				<td><%= "%.2f" % data[:wind_erosion] %> (tons/acre/year)</td>
			</tr>
			<tr>
				<th>Soil Conditioning Index</th>
				<td><%= "%.2f" % data[:soil_conditioning_index] %></td>
			</tr>
			<tr>
				<th colspan="2">Soil Conditioning Index SubFactors</th>
			</tr>
			<tr>
				<th> - Organic Matter</th>
				<td><%= "%.2f" % data[:organic_matter_sf] %></td>
			</tr>
			<tr>
				<th> - Field Operation</th>
				<td><%= "%.2f" % data[:field_operation_sf] %></td>
			</tr>
			<tr>
				<th> - Erosion</th>
				<td><%= "%.2f" % data[:erosion_sf] %></td>
			</tr>
			</tbody>
		</table>
	</div>
</div>

<div class="row">
	<div class="col-xs-12">
    
		<table class="table">
			<tbody>
        <tr>
					<th>Total Erosion
					<div></div>
					</th>
					<td><img src="./images/AntaresTotalErosPic.png" class="eros-map"></td>
					<td><img src="./images/AntaresTotalErosLegend.png" class="eros-map"></td>
				</tr>

        <tr>
					<th>Wind Erosion
					<div></div>
					</th>
					<td><img src="./images/AntaresWindErosPic.png" class="eros-map"></td>
					<td><img src="./images/AntaresWindErosLegend.png" class="eros-map"></td>
				</tr>

        <tr>
					<th>Water Erosion
					<div></div>
					</th>
					<td><img src="./images/AntaresWaterErosPic.png" class="eros-map"></td>
					<td><img src="./images/AntaresWaterErosLegend.png" class="eros-map"></td>
				</tr>

        <tr>
					<th>SCI
					<div></div>
					</th>
					<td><img src="./images/AntaresSCIPic.png" class="eros-map"></td>
					<td><img src="./images/AntaresSCILegend.png" class="eros-map"></td>
				</tr>

        <tr>
					<th>SCIOM
					<div></div>
					</th>
					<td><img src="./images/AntaresSCIOMPic.png" class="eros-map"></td>
					<td><img src="./images/AntaresSCIOMLegend.png" class="eros-map"></td>
				</tr>
        
			</tbody>
		</table>
	</div>
</div>

</div>

<script src="./js/libs/jquery-2.1.0.min.js"></script>
<script src="./js/libs/bootstrap.min.js"></script>

</body>
</html>
